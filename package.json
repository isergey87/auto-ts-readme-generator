{
  "name": "auto-ts-readme-generator",
  "version": "0.0.1",
  "description": "tool to generate description for TypeScripts exports",
  "main": "./bin/index.js",
  "scripts": {
    "prepare:husky": "husky install",
    "build": "rollup -c",
    "watch": "rollup --watch -c",
    "circular": "dpdm -T --tree=false --warning=false --exit-code circular:1 src/**",
    "lint": "eslint --ext .js,.ts,.tsx ./src",
    "lint:fix": "eslint --ext .js,.ts,.tsx ./src --fix",
    "test": "jest --passWithNoTests",
    "custom:publish": "npm run lint && npm run circular && yarn run test && npm version && npm run build && npm publish",
    "version": "git add -A ./src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isergey87/auto-ts-readme-generator.git"
  },
  "keywords": [
    "readme",
    "typescript",
    "documentation"
  ],
  "author": "isergey87",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isergey87/auto-ts-readme-generator/issues"
  },
  "homepage": "https://github.com/isergey87/auto-ts-readme-generator#readme",
  "devDependencies": {
    "@babel/core": "^7.22.11",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-typescript": "^7.22.11",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-node-resolve": "^15.2.1",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.6",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "dpdm": "^3.13.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "lint-staged": "^14.0.1",
    "react": "^18.2.0",
    "rollup": "^3.28.1",
    "rollup-plugin-multi-input": "^1.4.1",
    "rollup-plugin-typescript2": "^0.35.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "typescript": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": false
    }
  },
  "files": [
    "./bin/index.js"
  ],
  "bin": {
    "atrg": "./bin/index.js"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "dpdm -T --tree=false --warning=false --exit-code circular:1"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "bracketSpacing": false,
    "arrowParens": "always",
    "jsxSingleQuote": true
  },
  "dependencies": {
    "replace-in-file": "^7.0.1",
    "yargs": "^17.7.2"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "__data__",
      "bin"
    ]
  }
}
